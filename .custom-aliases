# instructions
# 1. place file in ~
# 2. add "source ~/.custom-aliases" at end of file ~/.bashrc (must be after "source ~/.custom-functions")
# 3. restart terminal or run "source ~/.bashrc"

# custom aliases

# update and upgrade
alias update-upgrade="sudo apt update && sudo apt upgrade -y"

# clear
alias c="clear"

# search history
alias hgrep="history | grep -i"
alias hcount="__history-count"

# working with custom aliases
alias shortcuts="less ~/.custom-aliases"
alias shortcuts-edit="vim ~/.custom-aliases"
alias shortcuts-update="source ~/.bashrc"

# git status
alias gits="git status"

# git add, commit, and push with message
alias commit-push="__commit-push"
